<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="130dp"
        android:layout_height="42dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_white_wide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/search_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/baseline_search_black_18dp"
        app:layout_constraintEnd_toStartOf="@+id/star_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/star_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="27dp"
        android:src="@drawable/baseline_star_black_18dp"
        app:layout_constraintEnd_toStartOf="@+id/etc_img"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/etc_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/baseline_more_vert_black_18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>